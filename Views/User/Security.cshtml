        function BlockAccount() {
            Swal.fire({
                title: 'Are you sure you want to block the account?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes',
                cancelButtonText: "No",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/User/BlockAccount", // Ensure this matches your route
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Congratulations!",
                                    text: 'You have successfully blocked the account.',
                                    icon: "success",
                                    confirmButtonText: "OK"
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/Home/Login";
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: "Error!",
                                    text: 'Failed to block the account.',
                                    icon: "error",
                                    confirmButtonText: "OK"
                                });
                            }
                        },
                        error: function () {
                            alert("An error occurred.");
                        }
                    });
