<script>
    function SubmitCode() {
        var number1 = $("#number1").val();
        var number2 = $("#number2").val();
        var number3 = $("#number3").val();
        var number4 = $("#number4").val();
        var number5 = $("#number5").val();
        var allnumber = number1 + number2 + number3 + number4 + number5;

        $.ajax({
            type: "POST",
            url: '/Home/checkCode/',
            data: { allnumber: allnumber },
            success: function (response) {
                if (response.success) {
                    alertify.success("Code Corect");
                    let timerInterval;
                    Swal.fire({
                        title: "Congratulations",
                        html: "Please wait <b></b> milliseconds to go to the main page.",
                        timer: 3000,
                        timerProgressBar: true,
                        didOpen: () => {
                            Swal.showLoading();
                            const timer = Swal.getPopup().querySelector("b");
                            timerInterval = setInterval(() => {
                                timer.textContent = Swal.getTimerLeft();
                            }, 100);
                        },
                        willClose: () => {
                            clearInterval(timerInterval);
                        }
                    }).then((result) => {
                        if (result.dismiss === Swal.DismissReason.timer) {
                            window.location.href = "/Home/Index"; // Redirect to the main page
                        }
                    });
                } else {
                    alertify.error("Code is incorrect. Please Input again!!");
                }
            },
            error: function () {
                alert("Failed");
            }
        });
    }
    function ResendCode(event) {
        event.preventDefault();
        var resendLink = document.getElementById("resendLink");
        var countdown = document.getElementById("countdown");
        resendLink.style.display = "none";
        countdown.style.display = "inline";
        var timeLeft = 60;
        countdown.textContent = ` (${timeLeft}s)`;

        var timerInterval = setInterval(function () {
            timeLeft--;
            countdown.textContent = ` (${timeLeft}s)`;

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                resendLink.style.display = "inline";
                countdown.style.display = "none";
            }
        }, 1000);
       
         $.ajax({
            url: '/Home/VerifyCode',
